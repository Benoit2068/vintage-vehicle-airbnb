<div class="container py-5">
  <div class="row">
    <div class="col-12 col-sm-9 col-md-6 offset-sm-2 offset-md-4">
      <div class="bg-white rounded p-3 shadow">
        <h3>Reservation for <%= @vehicle.name %></h3>
        <%= simple_form_for [@vehicle, @reservation] do |f| %>
        <%# <input type="date" name="born_on" id="born_on" /> %>
          <%= f.input :date_start, as: :date, order: [:day, :month, :year] %>
          <%= f.input :date_end, as: :date, order: [:day, :month, :year] %>
          <%= f.input :comment, placeholder: 'Enter a comment' %>
          <%= f.submit class: 'btn btn-gradient' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
