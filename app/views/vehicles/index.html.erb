<div class="container" style="background-color:
silver;">


  <%= form_tag vehicles_path, method: :get, class:"d-flex" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a vehicle"
  %>
  <%= submit_tag "Search", class: "btn btn-primary " %>
  <% end %>

      <h1>Find your next vehicle...</h1>

  <div class="cards">
      <% @vehicles.each do |vehicle| %>
      <div class="card-trip">
        <% if vehicle.photo.attached?  %>
        <%= cl_image_tag vehicle.photo.key, height: 200, width: 300, crop: :fill %>
        <% end %>
        <h2><%= vehicle.name %></h2>
        <p>Description : <%= vehicle.description  %></p>
        <p>price : <%= vehicle.price  %>â‚¬ per day</p>
        <p><%= link_to "Show details", vehicle_path(vehicle),  class: "btn btn-gradient"  %></p>
      </div>
      <% end %>

  </div>
  <%= link_to "Add new vehicle", new_vehicle_path, class: "btn btn-gradient" %>
</div>
